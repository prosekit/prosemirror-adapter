{
  "name": "@prosemirror-adapter/monorepo",
  "type": "commonjs",
  "private": true,
  "packageManager": "pnpm@9.15.9",
  "description": "Monorepo for ProseMirror Adapter",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "commit": "git-cz",
    "ex": "pnpm --filter=e2e start",
    "test": "pnpm run build && pnpm --filter=e2e test",
    "test:install": "pnpm --filter=e2e test:install",
    "changeset": "changeset",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "release": "changeset publish",
    "prepare": "husky"
  },
  "dependencies": {
    "@changesets/cli": "^2.28.1",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@ocavue/eslint-config": "^3.3.1",
    "@type-config/strict": "^1.2.1",
    "@types/rollup-plugin-auto-external": "^2.0.5",
    "concurrently": "^9.1.2",
    "eslint": "^9.29.1",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "pkg-pr-new": "^0.0.41",
    "prosemirror-keymap": "^1.2.2",
    "prosemirror-model": "^1.24.1",
    "prosemirror-state": "^1.4.3",
    "prosemirror-view": "^1.38.1",
    "tslib": "^2.8.1",
    "typescript": "~5.7.3",
    "vite": "^5.4.14"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "rollup"
      ]
    }
  }
}
